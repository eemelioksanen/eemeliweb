---
const name = 'Eemeli Oksanen'
const linkClass = 'px-1 my-3 animate-up'
const iconClass = 'sm:h-8 h-12 sm:px-1 px-2 hover:scale-125 duration-200'
---

<div class='w-full sm:flex align-top bg-opacity-0'>
  <div class='sm:w-1/3'></div>
  <div class='sm:w-1/3 w-full text-center font-mono text-5xl'>
    <h1 class='header animate-up pt-5 sm:pt-10'>{name}</h1>
  </div>
  <div
    class='sm:w-1/3 w-full p-2 justify-center sm:justify-end flex pt-10 sm:pt-0'
  >
    <div class={linkClass}>
      <a href='https://github.com/eemelioksanen' target='_blank'>
        <img class={iconClass} src='github-mark-white.svg' />
      </a>
    </div>
    <div class={linkClass} style='animation-delay: 100ms;'>
      <a href='https://t.me/eemelioksanen' target='_blank'>
        <img class={iconClass} src='telegram-128.png' />
      </a>
    </div>
    <div class={linkClass} style='animation-delay: 200ms;'>
      <a
        href='https://www.linkedin.com/in/eemeli-oksanen-b66484220/'
        target='_blank'
      >
        <img class={iconClass} src='In-White-128@2x.png' />
      </a>
    </div>
  </div>
</div>

<style>
  .header {
    --color1: white;
    --color2: rgb(204, 204, 204);
    background: linear-gradient(
      45deg,
      var(--color1) 0%,
      var(--color1) 50%,
      var(--color2) 50%,
      var(--color2) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .animate-up {
    animation: downFromAbove 0.5s ease-out forwards;
    position: relative;
    opacity: 0%;
  }

  @keyframes downFromAbove {
    0% {
      opacity: 0%;
      transform: translateY(-4rem);
    }
    100% {
      opacity: 1;
      transform: translateY(0rem);
    }
  }
</style>
